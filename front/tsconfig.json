{
  "compilerOptions": {
    "outDir": "./dist",          // Output directory for compiled JS
    "module": "ESNext",          // Module system (adjust based on your needs)
    "target": "ES5",             // Output target JavaScript version
    "allowJs": true,             // Allow compiling .js files
    "esModuleInterop": true,     // Import non-ES modules smoothly
    "strict": true               // Enable strict type-checking options
  },
  "include": [
    "./*.ts",
    "./**/*.ts"               // Path to your TypeScript files
  ]
}