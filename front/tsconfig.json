{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "NodeNext",         // Set module to NodeNext
    "target": "ES5",
    "allowJs": true,
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "NodeNext", // Must match 'module'
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": [
    "./**/*.ts"
  ]
}